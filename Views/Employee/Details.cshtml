@model Hung_Models.Models.Employee

@{
    ViewData["Title"] = "Chi tiết nhân viên";
}

<div class="card shadow-lg mt-4">
    <div class="card-header bg-info text-white">
        <h4 class="mb-0"><i class="bi bi-person-badge"></i> @ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Họ tên</dt>
            <dd class="col-sm-9">@Model.FullName</dd>

            <dt class="col-sm-3">Giới tính</dt>
            <dd class="col-sm-9">@Model.Gender</dd>

            <dt class="col-sm-3">SĐT</dt>
            <dd class="col-sm-9">@Model.Phone</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Lương</dt>
            <dd class="col-sm-9">@string.Format("{0:N0} đ", Model.Salary)</dd>

            <dt class="col-sm-3">Trạng thái</dt>
            <dd class="col-sm-9">
                @if (Model.Status)
                {
                    <span class="badge bg-success">Đang làm</span>
                }
                else
                {
                    <span class="badge bg-danger">Nghỉ</span>
                }
            </dd>
        </dl>
    </div>
    <div class="card-footer d-flex justify-content-between">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Sửa
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Quay lại
        </a>
    </div>
</div>
