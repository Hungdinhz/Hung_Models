@model Hung_Models.Models.Employee

@{
    ViewData["Title"] = "Xoá nhân viên";
}

<div class="card shadow-lg mt-4 border-danger">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> @ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <h5 class="text-danger mb-3">Bạn có chắc chắn muốn xoá nhân viên này?</h5>

        <table class="table table-sm table-bordered">
            <tr>
                <th>Họ tên</th>
                <td>@Model.FullName</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>SĐT</th>
                <td>@Model.Phone</td>
            </tr>
            <tr>
                <th>Lương</th>
                <td>@string.Format("{0:N0} đ", Model.Salary)</td>
            </tr>
            <tr>
                <th>Trạng thái</th>
                <td>
                    @if (Model.Status)
                    {
                        <span class="badge bg-success">Đang làm</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Nghỉ</span>
                    }
                </td>
            </tr>
        </table>
    </div>
    <div class="card-footer d-flex justify-content-between">
        <form asp-action="Delete" method="post" class="m-0">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Xoá
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Huỷ
        </a>
    </div>
</div>
