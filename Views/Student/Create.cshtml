@model Hung_Models.Models.Student
@{
    ViewData["Title"] = "Create Student";
    var Branches = ViewBag.AllBranches;
}

<div class="card shadow-lg mt-4">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0"><i class="bi bi-person-plus"></i> @ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <form asp-controller="Student" asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter full name..." />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter email..." />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter password..." />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Branch" class="form-label"></label>
                <select asp-for="Branch" class="form-select" asp-items="Branches"></select>
                <span asp-validation-for="Branch" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Gender" class="form-label"></label><br />
                <div class="form-check form-check-inline">
                    <input asp-for="Gender" class="form-check-input" type="radio" value="Male" />
                    <label class="form-check-label">Male</label>
                </div>
                <div class="form-check form-check-inline">
                    <input asp-for="Gender" class="form-check-input" type="radio" value="Female" />
                    <label class="form-check-label">Female</label>
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="IsRegular" class="form-check-input" type="checkbox" />
                <label asp-for="IsRegular" class="form-check-label"></label>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label"></label>
                <textarea asp-for="Address" class="form-control" rows="3" placeholder="Enter address..."></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DateOfBorth" class="form-label"></label>
                <input asp-for="DateOfBorth" type="date" class="form-control"/>
                <span asp-validation-for="DateOfBorth" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Diem" class="form-label"></label>
                <input asp-for="Diem" class="form-control" placeholder="Enter score..." />
                <span asp-validation-for="Diem" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
