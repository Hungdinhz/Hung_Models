@model Hung_Models.Models.SanPham

@{
    ViewData["Title"] = "Xóa Sản Phẩm";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">Xác Nhận Xóa Sản Phẩm</h2>
                </div>
                <div class="card-body">
                    <h4 class="card-title text-center text-danger mb-4">
                        <i class="bi bi-exclamation-triangle-fill"></i> Bạn có chắc chắn muốn xóa sản phẩm này không?
                    </h4>

                    <hr class="mb-4">

                    <dl class="row detail-list">
                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.MaSanPham)
                        </dt>
                        <dd class="col-sm-8 font-weight-bold">
                            @Html.DisplayFor(model => model.MaSanPham)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.TenSanPham)
                        </dt>
                        <dd class="col-sm-8">
                            <strong class="text-primary">@Html.DisplayFor(model => model.TenSanPham)</strong>
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.MaLoaiNavigation)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.MaLoaiNavigation.TenLoai)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.DonGia)
                        </dt>
                        <dd class="col-sm-8 text-success">
                            <span class="badge bg-success">@Html.DisplayFor(model => model.DonGia)</span>
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.SoLuong)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.SoLuong)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.TrangThai)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.TrangThai)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.HinhAnh)
                        </dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.HinhAnh))
                            {
                                <img src="~/images/@Model.HinhAnh" alt="Ảnh sản phẩm" class="img-thumbnail" style="max-width: 150px; height: auto;" />
                            }
                            else
                            {
                                <span>Không có ảnh</span>
                            }
                        </dd>
                    </dl>

                    <hr class="mt-4">

                    <form asp-action="Delete" class="d-flex justify-content-between align-items-center">
                        <input type="hidden" asp-for="Id" />

                        <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                            <i class="bi bi-trash-fill"></i> Xóa Ngay
                        </button>

                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Quay lại danh sách
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}