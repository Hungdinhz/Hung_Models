@model Hung_Models.Models.SanPham

@{
    ViewData["Title"] = "Thêm sản phẩm mới";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-plus-circle"></i> @ViewData["Title"]</h4>
        </div>

        <div class="card-body">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="MaSanPham" class="form-label fw-semibold"></label>
                        <input asp-for="MaSanPham" class="form-control" placeholder="Nhập mã sản phẩm..." />
                        <span asp-validation-for="MaSanPham" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TenSanPham" class="form-label fw-semibold"></label>
                        <input asp-for="TenSanPham" class="form-control" placeholder="Nhập tên sản phẩm..." />
                        <span asp-validation-for="TenSanPham" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="HinhAnh" class="form-label fw-semibold"></label>
                        <input asp-for="HinhAnh" type="file" class="form-control" />
                        <span asp-validation-for="HinhAnh" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="SoLuong" class="form-label fw-semibold"></label>
                        <input asp-for="SoLuong" class="form-control" placeholder="0" />
                        <span asp-validation-for="SoLuong" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="DonGia" class="form-label fw-semibold"></label>
                        <input asp-for="DonGia" class="form-control" placeholder="Nhập đơn giá..." />
                        <span asp-validation-for="DonGia" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MaLoai" class="form-label fw-semibold"></label>
                        <select asp-for="MaLoai" class="form-select" asp-items="ViewBag.MaLoai">
                            <option value="">-- Chọn loại sản phẩm --</option>
                        </select>
                        <span asp-validation-for="MaLoai" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TrangThai" class="form-label fw-semibold"></label>
                        <select asp-for="TrangThai" class="form-select">
                            <option value="1">Còn hàng</option>
                            <option value="0">Hết hàng</option>
                            <option value="2">Tạm ngưng</option>
                        </select>
                        <span asp-validation-for="TrangThai" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Lưu sản phẩm
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
