@model Hung_Models.Models.SanPham

@{
    ViewData["Title"] = "Chi Tiết Sản Phẩm";

    // Định dạng tiền tệ an toàn và gọn gàng hơn
    string formattedPrice = "Chưa xác định";
    if (Model?.DonGia.HasValue == true)
    {
        formattedPrice = Model.DonGia.Value.ToString("#,##0", new System.Globalization.CultureInfo("vi-VN")) + " VNĐ";
    }
}

<div class="container mt-5">
    <h1 class="text-primary mb-4"><i class="bi bi-box-seam-fill"></i> Chi Tiết Sản Phẩm</h1>
    <div class="row">
        <div class="col-md-5">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center d-flex align-items-center justify-content-center p-4">
                    @if (!string.IsNullOrEmpty(Model?.HinhAnh))
                    {
                        <img src="~/images/@Model.HinhAnh" alt="Ảnh sản phẩm: @Model.TenSanPham" class="img-fluid rounded border border-secondary" style="max-height: 400px; object-fit: contain;" />
                    }
                    else
                    {
                        <div class="p-5 border rounded bg-light text-muted w-100">
                            <i class="bi bi-image" style="font-size: 4rem;"></i><br>
                            Không có hình ảnh
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">@Model?.TenSanPham</h3>
                </div>
                <div class="card-body">
                    <dl class="row product-details-list">

                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.MaSanPham)</dt>
                        <dd class="col-sm-8"><span class="badge bg-secondary p-2">@Html.DisplayFor(model => model.MaSanPham)</span></dd>

                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.DonGia)</dt>
                        <dd class="col-sm-8"><strong class="text-success h4">@formattedPrice</strong></dd>

                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.SoLuong)</dt>
                        <dd class="col-sm-8">
                            <span class="fs-5">@Html.DisplayFor(model => model.SoLuong)</span>
                            <span class="text-secondary fst-italic"> (sản phẩm)</span>
                        </dd>

                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.TrangThai)</dt>
                        <dd class="col-sm-8">
                            @switch (Model?.TrangThai)
                            {
                                case 0:
                                    <span class="badge bg-danger p-2"><i class="bi bi-archive-fill"></i> Hết hàng</span>
                                    break;
                                case 1:
                                    <span class="badge bg-success p-2"><i class="bi bi-check-circle-fill"></i> Còn hàng</span>
                                    break;
                                case 2:
                                    <span class="badge bg-warning text-dark p-2"><i class="bi bi-pause-circle-fill"></i> Tạm ngưng</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary p-2"><i class="bi bi-question-circle-fill"></i> Không xác định</span>
                                    break;
                            }
                        </dd>

                        <dt class="col-sm-4 text-muted">Loại Sản Phẩm</dt>
                        <dd class="col-sm-8">
                            <i class="bi bi-tag-fill text-info"></i>
                            <span class="fw-bold text-info">
                                @(Model?.MaLoaiNavigation?.TenLoai ?? "Chưa phân loại")
                            </span>
                        </dd>
                    </dl>
                </div>

                <div class="card-footer d-flex justify-content-start gap-2">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning shadow-sm">
                        <i class="bi bi-pencil-square"></i> Chỉnh sửa
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}