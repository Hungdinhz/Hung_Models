@model Hung_Models.Models.SanPham

@{
    ViewData["Title"] = "Chỉnh Sửa Sản Phẩm";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4"><i class="bi bi-pencil-square"></i> Chỉnh Sửa Sản Phẩm</h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg p-4">
                <form asp-action="Edit" enctype="multipart/form-data">
                    @* Added enctype for file upload *@
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="HinhAnh" /> @* Keep existing file name *@

                    <div class="row">
                        <div class="col-md-6">

                            <div class="form-group mb-3">
                                <label asp-for="MaSanPham" class="form-label fw-bold">Mã Sản Phẩm</label>
                                <input asp-for="MaSanPham" class="form-control" />
                                <span asp-validation-for="MaSanPham" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="TenSanPham" class="form-label fw-bold">Tên Sản Phẩm</label>
                                <input asp-for="TenSanPham" class="form-control" />
                                <span asp-validation-for="TenSanPham" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="DonGia" class="form-label fw-bold">Đơn Giá (VNĐ)</label>
                                <input asp-for="DonGia" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="DonGia" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="SoLuong" class="form-label fw-bold">Số Lượng Trong Kho</label>
                                <input asp-for="SoLuong" class="form-control" type="number" />
                                <span asp-validation-for="SoLuong" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">

                            <div class="form-group mb-3">
                                <label asp-for="MaLoai" class="form-label fw-bold">Loại Sản Phẩm</label>
                                <select asp-for="MaLoai" class="form-select" asp-items="ViewBag.MaLoai">
                                    <option value="">-- Chọn loại --</option>
                                </select>
                                <span asp-validation-for="MaLoai" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="TrangThai" class="form-label fw-bold d-block">Trạng Thái (1: Còn hàng, 0: Hết hàng, 2: Tạm ngưng)</label>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="TrangThai" value="1" id="status1" checked="@(Model?.TrangThai == 1)" />
                                    <label class="form-check-label text-success" for="status1">Còn hàng</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="TrangThai" value="0" id="status0" checked="@(Model?.TrangThai == 0)" />
                                    <label class="form-check-label text-danger" for="status0">Hết hàng</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="TrangThai" value="2" id="status2" checked="@(Model?.TrangThai == 2)" />
                                    <label class="form-check-label text-warning" for="status2">Tạm ngưng</label>
                                </div>
                                <span asp-validation-for="TrangThai" class="text-danger d-block"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label fw-bold">Hình Ảnh Hiện Tại:</label>
                                @if (!string.IsNullOrEmpty(Model?.HinhAnh))
                                {
                                    <div class="mb-2">
                                        <img src="~/images/@Model.HinhAnh" alt="Current Image" class="img-thumbnail" style="max-width: 150px; height: auto;" />
                                    </div>
                                }
                                else
                                {
                                    <p class="text-muted fst-italic">Chưa có ảnh.</p>
                                }

                                <label for="NewHinhAnh" class="form-label mt-2">Tải lên ảnh mới</label>
                                <input type="file" id="NewHinhAnh" name="NewHinhAnh" class="form-control" accept="image/*" />
                                <small class="form-text text-muted">Chọn file để thay thế ảnh hiện tại (nếu có).</small>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between pt-3 border-top mt-3">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                            <i class="bi bi-save-fill"></i> Lưu thay đổi
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}