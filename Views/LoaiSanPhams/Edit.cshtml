@model Hung_Models.Models.LoaiSanPham

@{
    ViewData["Title"] = "Chỉnh sửa loại sản phẩm";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">
                <i class="bi bi-pencil-square"></i> @ViewData["Title"]
            </h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="MaLoai" class="form-label fw-semibold"></label>
                        <input asp-for="MaLoai" class="form-control" placeholder="Nhập mã loại..." />
                        <span asp-validation-for="MaLoai" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TenLoai" class="form-label fw-semibold"></label>
                        <input asp-for="TenLoai" class="form-control" placeholder="Nhập tên loại..." />
                        <span asp-validation-for="TenLoai" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TrangThai" class="form-label fw-semibold"></label>
                        <select asp-for="TrangThai" class="form-select">
                            <option value="1">Hoạt động</option>
                            <option value="0">Ngừng hoạt động</option>
                        </select>
                        <span asp-validation-for="TrangThai" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
