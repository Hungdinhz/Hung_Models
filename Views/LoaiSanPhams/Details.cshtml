@model Hung_Models.Models.LoaiSanPham

@{
    ViewData["Title"] = "Chi tiết loại sản phẩm";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">Chi tiết loại sản phẩm</h3>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold text-secondary">Mã loại</dt>
                <dd class="col-sm-9">@Model.MaLoai</dd>

                <dt class="col-sm-3 fw-bold text-secondary">Tên loại</dt>
                <dd class="col-sm-9">@Model.TenLoai</dd>

                <dt class="col-sm-3 fw-bold text-secondary">Trạng thái</dt>
                <dd class="col-sm-9">
                    @if (Model.TrangThai == 1)
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Ngừng hoạt động</span>
                    }
                </dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                <i class="bi bi-pencil-square"></i> Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>
