@model Hung_Models.Models.LoaiSanPham

@{
    ViewData["Title"] = "Xóa loại sản phẩm";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-danger text-white text-center">
            <h3 class="mb-0">Xác nhận xóa loại sản phẩm</h3>
        </div>

        <div class="card-body">
            <p class="text-center text-danger fw-semibold mb-4">
                Bạn có chắc chắn muốn xóa loại sản phẩm này không?
            </p>
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold text-secondary">Mã loại</dt>
                <dd class="col-sm-9">@Model.MaLoai</dd>

                <dt class="col-sm-3 fw-bold text-secondary">Tên loại</dt>
                <dd class="col-sm-9">@Model.TenLoai</dd>

                <dt class="col-sm-3 fw-bold text-secondary">Trạng thái</dt>
                <dd class="col-sm-9">
                    @if (Model.TrangThai == 1)
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Ngừng hoạt động</span>
                    }
                </dd>
            </dl>
        </div>

        <div class="card-footer text-center">
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash3"></i> Xóa
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>
