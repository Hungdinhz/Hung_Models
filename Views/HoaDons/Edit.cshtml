@model Hung_Models.Models.HoaDon

@{
    ViewData["Title"] = "Chỉnh Sửa Hóa Đơn";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4"><i class="bi bi-pencil-square"></i> Chỉnh Sửa Hóa Đơn</h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-lg-10">
            @* Tăng chiều rộng cột để chứa nhiều trường hơn *@
            <div class="card shadow-lg p-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="row">

                        <div class="col-md-6 border-end mb-4">
                            <h5 class="text-secondary mb-3"><i class="bi bi-journal-text"></i> Thông tin Đơn hàng</h5>

                            <div class="form-group mb-3">
                                <label asp-for="MaHoaDon" class="form-label fw-bold">Mã Hóa Đơn</label>
                                <input asp-for="MaHoaDon" class="form-control" readonly="readonly" />
                                <span asp-validation-for="MaHoaDon" class="text-danger"></span>
                                <small class="form-text text-muted">Mã hóa đơn không thể thay đổi.</small>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="MaKhaHang" class="form-label fw-bold">Khách Hàng Đăng Ký</label>
                                <select asp-for="MaKhaHang" class="form-select" asp-items="ViewBag.MaKhaHang">
                                    <option value="">-- Khách vãng lai --</option>
                                </select>
                                <span asp-validation-for="MaKhaHang" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="NgayHoaDon" class="form-label fw-bold">Ngày Lập Hóa Đơn</label>
                                <input asp-for="NgayHoaDon" class="form-control" type="date" />
                                <span asp-validation-for="NgayHoaDon" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="NgayNhan" class="form-label fw-bold">Ngày Nhận Dự Kiến</label>
                                <input asp-for="NgayNhan" class="form-control" type="date" />
                                <span asp-validation-for="NgayNhan" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="TongTriGia" class="form-label fw-bold">Tổng Trị Giá</label>
                                @* Thường là readonly vì giá trị này được tính toán *@
                                <input asp-for="TongTriGia" class="form-control text-end fw-bold text-success" type="number" step="0.01" readonly="readonly" />
                                <span asp-validation-for="TongTriGia" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="TrangThai" class="form-label fw-bold d-block">Cập nhật Trạng Thái Đơn Hàng</label>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="TrangThai" value="0" id="status0" checked="@(Model?.TrangThai == 0)" />
                                    <label class="form-check-label text-warning" for="status0">Chờ xử lý</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="TrangThai" value="1" id="status1" checked="@(Model?.TrangThai == 1)" />
                                    <label class="form-check-label text-info" for="status1">Đã xác nhận</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="TrangThai" value="2" id="status2" checked="@(Model?.TrangThai == 2)" />
                                    <label class="form-check-label text-primary" for="status2">Đang giao</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="TrangThai" value="3" id="status3" checked="@(Model?.TrangThai == 3)" />
                                    <label class="form-check-label text-success" for="status3">Hoàn thành</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="TrangThai" value="4" id="status4" checked="@(Model?.TrangThai == 4)" />
                                    <label class="form-check-label text-danger" for="status4">Đã hủy</label>
                                </div>
                                <span asp-validation-for="TrangThai" class="text-danger d-block"></span>
                            </div>

                        </div>

                        <div class="col-md-6 mb-4">
                            <h5 class="text-secondary mb-3"><i class="bi bi-person-lines-fill"></i> Thông tin Người nhận</h5>

                            <div class="form-group mb-3">
                                <label asp-for="HoTenKhachHang" class="form-label fw-bold">Họ Tên</label>
                                <input asp-for="HoTenKhachHang" class="form-control" />
                                <span asp-validation-for="HoTenKhachHang" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Email" class="form-label fw-bold">Email</label>
                                <input asp-for="Email" class="form-control" type="email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="DienThoai" class="form-label fw-bold">Điện Thoại</label>
                                <input asp-for="DienThoai" class="form-control" type="tel" />
                                <span asp-validation-for="DienThoai" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="DiaChi" class="form-label fw-bold">Địa Chỉ Giao Hàng</label>
                                <textarea asp-for="DiaChi" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="DiaChi" class="text-danger"></span>
                            </div>
                        </div>

                    </div>

                    <div class="d-flex justify-content-between pt-4 border-top mt-2">
                        <button type="submit" value="Save" class="btn btn-primary btn-lg shadow-sm">
                            <i class="bi bi-save-fill"></i> Lưu thay đổi
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}