@model Hung_Models.Models.HoaDon

@{
    ViewData["Title"] = "Xác Nhận Xóa Hóa Đơn";

    // Định dạng tiền tệ
    string formattedPrice = Model?.TongTriGia.HasValue == true
                            ? Model.TongTriGia.Value.ToString("#,##0", new System.Globalization.CultureInfo("vi-VN")) + " VNĐ"
                            : "0 VNĐ";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0"><i class="bi bi-exclamation-octagon-fill"></i> Xác Nhận Xóa Hóa Đơn</h2>
                </div>
                <div class="card-body">
                    <h4 class="card-title text-center text-danger mb-4">
                        Bạn có chắc chắn muốn **XÓA VĨNH VIỄN** hóa đơn này không?
                        <br><small class="text-muted fst-italic">(Hành động này không thể hoàn tác!)</small>
                    </h4>

                    <hr class="mb-4">

                    <dl class="row detail-list">

                        <div class="col-md-6 border-end">
                            <h5 class="text-secondary mb-3">Thông tin Đơn hàng</h5>

                            <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.MaHoaDon)</dt>
                            <dd class="col-sm-8"><span class="badge bg-secondary p-2">@Html.DisplayFor(model => model.MaHoaDon)</span></dd>

                            <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.TongTriGia)</dt>
                            <dd class="col-sm-8"><strong class="text-danger h5">@formattedPrice</strong></dd>

                            <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.NgayHoaDon)</dt>
                            <dd class="col-sm-8">@Model.NgayHoaDon?.ToString("dd/MM/yyyy")</dd>

                            <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.NgayNhan)</dt>
                            <dd class="col-sm-8">@Model.NgayNhan?.ToString("dd/MM/yyyy")</dd>

                            <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.TrangThai)</dt>
                            <dd class="col-sm-8">
                                @{
                                    string statusText = Model?.TrangThai switch
                                    {
                                        0 => "Chờ xử lý",
                                        1 => "Đã xác nhận",
                                        2 => "Đang giao",
                                        3 => "Hoàn thành",
                                        4 => "Đã hủy",
                                        _ => "Không rõ"
                                    };
                                    string badgeClass = Model?.TrangThai switch
                                    {
                                        0 => "warning text-dark",
                                        1 => "info text-dark",
                                        4 => "danger",
                                        _ => "secondary"
                                    };
                                }
                                <span class="badge bg-@badgeClass p-2">@statusText</span>
                            </dd>

                            <dt class="col-sm-4 text-muted">Khách Hàng ĐK</dt>
                            <dd class="col-sm-8">
                                @(Model?.MaKhaHangNavigation?.HoTenKhachHang ?? "Khách vãng lai")
                            </dd>
                        </div>

                        <div class="col-md-6">
                            <h5 class="text-secondary mb-3">Thông tin Khách hàng</h5>

                            <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.HoTenKhachHang)</dt>
                            <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.HoTenKhachHang)</dd>

                            <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.DienThoai)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.DienThoai)</dd>

                            <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.Email)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                            <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.DiaChi)</dt>
                            <dd class="col-sm-8 text-wrap">@Html.DisplayFor(model => model.DiaChi)</dd>
                        </div>
                    </dl>

                    <hr class="mt-4">

                    <form asp-action="Delete" class="d-flex justify-content-between align-items-center">
                        <input type="hidden" asp-for="Id" />

                        <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                            <i class="bi bi-trash-fill"></i> XÁC NHẬN XÓA
                        </button>

                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Hủy và Quay lại
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}